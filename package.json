{
  "name": "vue-webpack-boilerplate",
  "version": "1.0.0",
  "description": "Vue 2 with Typescript and Webpack to start",
  "main": "main.js",
  "repository": "https://github.com/maxi-nm/vue-webpack-boilerplate",
  "author": "maxi-nm",
  "license": "MIT",
  "scripts": {
    "release:major": "standard-version --release-as major",
    "release:minor": "standard-version --release-as minor",
    "release:patch": "standard-version --release-as patch",
    "commit": "commit",
    "lint": "eslint src/**/*.ts",
    "stylelint": "stylelint \"./src/**/*.{vue,scss}\" --formatter verbose",
    "start:dev": "cross-env NODE_ENV=development webpack-dev-server --mode development",
    "start:prod": "cross-env NODE_ENV=production webpack --mode production",
    "build": "cross-env NODE_ENV=production webpack --mode production --progress --hide-modules"
  },
  "devDependencies": {
    "@babel/cli": "^7.12.0",
    "@babel/core": "^7.12.0",
    "@babel/plugin-proposal-class-properties": "^7.10.4",
    "@babel/plugin-proposal-object-rest-spread": "^7.11.0",
    "@babel/plugin-syntax-dynamic-import": "^7.8.3",
    "@babel/plugin-transform-arrow-functions": "^7.10.4",
    "@babel/plugin-transform-runtime": "^7.12.0",
    "@babel/plugin-transform-typescript": "^7.12.0",
    "@babel/preset-env": "^7.12.0",
    "@babel/preset-typescript": "^7.12.0",
    "@babel/runtime": "^7.12.0",
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "@commitlint/prompt-cli": "^11.0.0",
    "@typescript-eslint/eslint-plugin": "^4.4.1",
    "@typescript-eslint/parser": "^4.4.1",
    "babel-eslint": "^10.1.0",
    "babel-loader": "^8.1.0",
    "cross-env": "^7.0.2",
    "css-loader": "^5.0.0",
    "eslint": "^7.11.0",
    "eslint-config-prettier": "^6.12.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-vue": "^7.0.1",
    "file-loader": "^6.1.1",
    "html-loader": "^1.3.2",
    "html-webpack-plugin": "^4.5.0",
    "husky": "^4.3.0",
    "prettier": "2.1.2",
    "sass-loader": "^10.0.3",
    "standard-version": "^9.0.0",
    "stylelint": "^13.7.2",
    "stylelint-config-recommended-scss": "^4.2.0",
    "stylelint-prettier": "^1.1.2",
    "stylelint-scss": "^3.18.0",
    "stylelint-webpack-plugin": "^2.1.1",
    "ts-loader": "^8.0.5",
    "typescript": "^4.0.3",
    "vue-eslint-parser": "^7.1.1",
    "vue-loader": "^15.9.3",
    "vue-style-loader": "^4.1.2",
    "webpack": "4.44.2",
    "webpack-cli": "3.3.12",
    "webpack-dev-server": "^3.11.0"
  },
  "dependencies": {
    "vue": "^2.6.12",
    "vue-router": "^3.4.6",
    "vue-template-compiler": "^2.6.12"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  }
}
